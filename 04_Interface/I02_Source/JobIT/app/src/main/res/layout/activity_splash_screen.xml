<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.SplashScreen.SplashScreenActivity"
    android:background="@color/backgroundRed">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </LinearLayout>
    <ImageView
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_above="@+id/tv_version"
        android:layout_centerHorizontal="true"
        android:src="@drawable/jobit_text_white" />

    <TextView
        android:id="@+id/tv_version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:textColor="#ffffff"
        android:textSize="15sp"
        android:text=""/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_above="@+id/tvNameCompany"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:layout_marginBottom="5dp">

        <ProgressBar
            android:id="@+id/prgLoading"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginBottom="10dp"
            android:indeterminateTint="#ffffff"
            android:indeterminate="true"
            />

        <TextView
            android:id="@+id/tvLoading"
            android:layout_marginStart="5dp"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:text="Đang tải..."
            android:textColor="#ffffff"
            android:textSize="15sp" />
    </LinearLayout>


    <TextView
        android:id="@+id/tvNameCompany"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="Team32GB"
        android:textColor="#ffffff"
        android:textSize="15sp" />

</RelativeLayout>